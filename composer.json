{
  "name": "remont",
  "description": "",
  "version": "1.0",
  "type": "project",
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "artifact",
      "url": "composer-artifacts/"
    }
  ],
  "require": {
    "php": ">=5.6",
    "johnpbloch/wordpress": "4.8.1",
    "composer/installers": "~1.0",
    "wp-cli/wp-cli" : "~0.22",
    "psy/psysh" : "~0.6",
    "advanced-custom-fields-pro": "5.5.3",
    "wp-all-import-pro": "4.4.9",
    "wp-all-export-pro": "1.4.7",
    "wpai-acf-add-on": "3.1.5",
    "comment-rating-field-pro-plugin": "3.4.8",
    "wpackagist-plugin/contact-form-7": "4.9",
    "wpackagist-plugin/ewww-image-optimizer": "3.6.1",
    "wpackagist-plugin/wordpress-seo": "5.4",
    "wpackagist-plugin/adrotate": "4.6.2",
    "wpackagist-plugin/regenerate-thumbnails": "2.2.6",
    "wpackagist-plugin/yoast-seo-settings-xml-csv-import": "1.1.5",
    "wpackagist-plugin/oa-social-login": "5.3"
  },
  "extra": {
    "installer-paths": {
      "public/wp-content/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "public/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
      "public/wp-content/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": {
      "johnpbloch/wordpress-core": "public/wp"
    }
  },
  "scripts" : {
    "post-install-cmd" : [
      "rm -f cli/wp",
      "ln -s ../vendor/wp-cli/wp-cli/bin/wp cli/wp"
    ]
  }
}